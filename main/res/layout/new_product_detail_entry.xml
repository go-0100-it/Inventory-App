<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.waters89gmail.dave.totalinventorycontrol.activity.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="20sp"
            android:inputType="text"
            android:hint="Name of product..."
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/product_name_edit_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:id="@+id/imageView1"
            android:src="@drawable/add_photo_place_holder"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:id="@+id/imageView2"
            android:src="@drawable/add_photo_place_holder"/>

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="Number of product. eg. 10001214"
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/product_number_edit_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Description of the product..."
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/product_description_edit_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Category of the product.  eg. Hardward"
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/product_category_edit_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:hint="Current price of the product"
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/price_edit_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:hint="Current stock count"
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/quantity_on_hand_edit_text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="32dp"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="Type of product. eg. raw goods"
            android:textColorHint="@color/hint_text_color"
            android:id="@+id/type_edit_text" />

    </LinearLayout>

</LinearLayout>